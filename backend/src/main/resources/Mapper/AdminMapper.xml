<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Mapper.AdminMapper">

    <select id="SelectAll" resultType="com.example.POJO.Admin">
        SELECT
        a.*,
        auth.username,
        auth.role,
        auth.email
        FROM admin a
        LEFT JOIN admin_auth auth ON a.id = auth.admin_id AND a.is_deleted = 0
        <where>
            a.is_deleted = 0
            <if test="name != null and name != '' ">
                AND a.name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="GetPersonalInfo" resultType="com.example.POJO.Admin">
        SELECT
        a.*,
        auth.username,
        auth.role,
        auth.email
        FROM admin a
        LEFT JOIN admin_auth auth ON a.id = auth.admin_id AND a.is_deleted = 0
        where
        a.is_deleted = 0 and a.id = #{id}
    </select>

    <insert id="InsertAdmin">
        INSERT INTO admin (id,name,addtime,gender,phone,is_deleted,avatar)
        VALUES (#{id},#{name},#{addtime},#{gender},#{phone},#{is_deleted},#{avatar})
    </insert>

    <insert id="InsertAdminList">
        INSERT IGNORE INTO admin (id,name,addtime,gender,phone,is_deleted,avatar)
        VALUES
        <foreach collection="adminList" item="admin" separator=",">
            (#{admin.id},#{admin.name},#{admin.addtime},#{admin.gender},
             #{admin.phone},#{admin.is_deleted},#{admin.avatar})
        </foreach>
    </insert>

    <update id="UpdateById">
        UPDATE admin SET name=#{name},addtime=#{addtime},gender=#{gender},phone=#{phone},is_deleted=#{is_deleted},avatar=#{avatar}
        WHERE id = #{id}
    </update>

    <update id="UndoByIds">
        UPDATE admin SET is_deleted = 0
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <update id="SoftDeleteByIds">
        UPDATE admin SET is_deleted = 1
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>
